<configuration>

  <system.webServer>
    <!-- Uncomment the lines below to disable HTTP redirects (useful when running classic ASP and ProTeckWeb on the same machine) -->
    <!--<rewrite>
      <rules>
        <remove name="HTTP to HTTPS redirect" />
        <rule name="HTTP to HTTPS redirect" enabled="false" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" matchType="Pattern" pattern="^OFF$" ignoreCase="true" negate="false" />
          </conditions>
          <serverVariables />
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Found" />
        </rule>
      </rules>
    </rewrite>-->
    <validation validateIntegratedModeConfiguration="false"/>
    <modules>
      <!-- WebDAV needs to be removed for OpenRasta to function properly. See https://github.com/openrasta/openrasta/wiki/Installing-OpenRasta-Under-IIS -->
      <remove name="WebDAVModule" />
      <add name="OpenRastaModule" type="OpenRasta.Hosting.AspNet.OpenRastaModule, ProTeck.Core.OpenRasta"/>
    </modules>
    <handlers>
      <!-- WebDAV needs to be removed for OpenRasta to function properly. See https://github.com/openrasta/openrasta/wiki/Installing-OpenRasta-Under-IIS -->
      <remove name="WebDAVModule" />
      <add name="OpenRastaHandler" verb="*" path="*.rastahook" type="OpenRasta.Hosting.AspNet.OpenRastaHandler, ProTeck.Core.OpenRasta"/>
    </handlers>
  </system.webServer>
</configuration>
